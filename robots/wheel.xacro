<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

  <xacro:include filename="$(find franka_description)/robots/inertia.xacro" />

  <xacro:macro name="wheel" params="lr mass parent radius:='0.125' wheel_width:='0.06' *origin">
    <link name="${lr[0]}_wheel_link" >

      <visual>
        <xacro:if value="${lr.lower() == 'right'}">
          <origin rpy="0 0 0" />
        </xacro:if>
        <xacro:if value="${lr.lower() == 'left'}">
          <origin rpy="${pi} 0 0" />
        </xacro:if>
        <geometry>
          <mesh filename="package://franka_description/meshes/visual/wheel.stl"/>
        </geometry>
        <material name="darkgrey">
          <color rgba="0.3 0.3 0.3 1.0"/>
        </material>
      </visual>

      <collision>
        <xacro:if value="${lr.lower() == 'right'}">
          <origin rpy="0 0 0" />
        </xacro:if>
        <xacro:if value="${lr.lower() == 'left'}">
          <origin rpy="${pi} 0 0" />
        </xacro:if>
        <geometry>
          <mesh filename="package://franka_description/meshes/collision/wheel_simplified.stl"/>
        </geometry>
      </collision>

      <xacro:inertia-cylinder mass="${mass}" radius="${radius}" h="${wheel_width}" />

    </link>

    <joint name="${lr[0]}_wheel_joint" type="continuous">
      <xacro:insert_block name="origin" />
      <parent link="${parent}" />
      <child  link="${lr[0]}_wheel_link" />
      <axis   xyz="0 1 0" />
      <limit  effort="25" velocity="20" />
    </joint>

  </xacro:macro>

</robot>
